@using BookPakistanTour.Models
@model TourSummaryModel

@if (Model != null)
{

    <div class="col-lg-12 list-group-item">
        <div class="thumbnail notextselect">
            <a href="@Url.Action("TourDetail","Home", new { id=Convert.ToInt32(Model.Id) })" class="img-thumbnail text-center center-block" style="text-decoration:none; color: inherit; width: 250px; height: 250px; background-image: url(@Model.ImageUrl); background-size: cover; background-repeat: no-repeat; background-position: 50%;">
                @*<img class="img-responsive img-thumbnail" style="width: 100%; height:100%" name="sumimg" id="sumig" src="@Url.Content(Model.ImageUrl)" alt="Loading..." />*@ <!--Thumbnail Image (first or Default Image)-->
            </a>
            <small id="company"><a href="@Url.Action("ToursByCompany","Home",new { name = Model.Company })" class="text-muted" style="text-decoration:none">@Model.Company</a></small> <!-- Brand -->

            <div style="height: auto; overflow: hidden">
                <strong><i class="glyphicon glyphicon-minus"></i> @Model.Title</strong>  <!--Kit Includes-->
            </div>
            <hr style="margin: 0" />
            <div class="row">
                <div class="col-lg-12">
                    @if (Model.Sale != 0)
                    {
                        <div style="height: auto; display: table; margin: auto">
                            <p class="text-center" style="font-size: 22px;color:#333; display: table-cell; vertical-align: middle"><strike style="font-size:small" class="text-muted">Rs @($"{Model.Price:N0}")</strike> Rs @($"{Model.Price - (Model.Price * Model.Sale / 100):N0}")</p>
                        </div>

                    }
                    else
                    {
                        <div style="height: auto; display: table; margin: auto">
                            <p class="text-center" style="font-size: 22px;color:#333; display: table-cell; vertical-align: middle">Rs @($"{Model.Price:N0}")</p> <!-- Price -->
                        </div>

                    }
                </div>
                <div class="col-lg-12">
                    <a href="@Url.Action("TourDetail","Home", new { id = Convert.ToInt32(Model.Id)})" class="btn btn-default btn-block"><span class="fa fa-eye"></span> View</a>
                </div>
            </div>
        </div>
    </div>
}

