@model BookPakistanTourClasslibrary.CompanyManagement.Company

@if (Model != null)
{

    <div class="col-lg-4 list-group-item">
        <div class="thumbnail">
            <a href="@Url.Action("CompanyDetails","Home", new { id=Convert.ToInt32(Model.Id) })" class="img-thumbnail text-center center-block" style="text-decoration:none; color: inherit; width: 250px; height: 250px;background-image: url(@Model.ImageUrl); background-size: cover; background-repeat: no-repeat; background-position: 50%;">
                @*<img style="height: 100%" name="sumimg" id="sumig" src="@Url.Content(Model.ImageUrl)" alt="Loading..." />*@ <!--Thumbnail Image (first or Default Image)-->
            </a>
            <div style="height: auto; overflow: hidden; text-align: center; margin: 10px">
                <strong> @Model.Name</strong>
                <p>@Model.City.Country.Name</p> , <p>@Model.City.Name</p>
            </div>
            <hr style="margin: 0" />
            <div class="row">
                <div class="col-lg-12 center-block text-center">
                    <a href="@Url.Action("CompanyDetails","Home", new { id = Convert.ToInt32(Model.Id)})" class="btn btn-default"><span class="fa fa-eye"></span> View History</a>
                </div>
            </div>
        </div>
    </div>
}