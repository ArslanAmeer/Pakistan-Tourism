@model IEnumerable<BookPakistanTourClasslibrary.TourManagement.Tour>

@{
    ViewBag.Title = "TourManagment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3 class="list-group-item-heading text-center notextselect">Product Managment</h3>

<div class="col-lg-9">
    <h4>List Of Tours</h4>
    <p>
        @Html.ActionLink("Add New Tour", "AddTour")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTour", new { id = item.Id }) |
                    @Html.ActionLink("Details", "TourDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteTour", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>